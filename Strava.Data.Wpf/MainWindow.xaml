<Window x:Class="Strava.Data.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="My Strava Data" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="gridActivities" Margin="0,0,400,0" AutoGenerateColumns="False" ItemsSource="{Binding Activities}" GridLinesVisibility="None"
                  BorderThickness="0" CanUserReorderColumns="False" CanUserResizeColumns="False" CanUserResizeRows="False" CanUserSortColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Date" Binding="{Binding StartDateLocalFormatted}"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}"/>
                <DataGridTextColumn Header="Distance" Binding="{Binding DisplayDistance}" />
            </DataGrid.Columns>
            <DataGrid.Resources>
                <Style TargetType="ScrollBar">
                    <Setter Property="Background" Value="Transparent"></Setter>
                    <Setter Property="Width" Value="3"></Setter>
                </Style>
            </DataGrid.Resources>
        </DataGrid>
        <ProgressBar x:Name="LoadingProgress" HorizontalAlignment="Left" Height="10" Margin="105,30,0,0" VerticalAlignment="Top" Width="200" IsIndeterminate="True" />
    </Grid>
</Window>
